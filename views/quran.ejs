  <div class="row mt-md-3">
    <div class="col-md-3 text-center">
      <h3 class="mt-md-2" style="padding-top: 1rem">Search</h3>
      <input
        class="form-control mt-md-3 ms-md-2"
        id="search-surah"
        type="search"
        placeholder="Ketik Nama Surat"
        aria-label="Search"
      />
      <div
        class="card ms-md-2 w-100 mt-md-5 element-hide"
        id="search-result"
        style="max-height: 10rem; overflow-y: scroll"
      >
